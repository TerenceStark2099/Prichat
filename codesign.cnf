[ req ]
distinguished_name = req_distinguished_name
prompt = yes
# We reference the new, clean extension section
x509_extensions = codesign_ext

[ req_distinguished_name ]
countryName = Country Name (2 letter code)
countryName_default = TW
stateOrProvinceName = State or Province Name (full name)
localityName = Locality Name (eg, city)
organizationName = Organization Name (eg, company)
organizationalUnitName = Organizational Unit Name (eg, section)
commonName = Common Name (eg, server FQDN or YOUR name)
emailAddress = Email Address

[ codesign_ext ]
# This explicitly declares it is NOT a CA (Certificate Authority) certificate.
basicConstraints = CA:false
# Standard key usage for an end entity certificate
keyUsage = digitalSignature, keyEncipherment
# CRITICAL: This line adds the required Code Signing EKU
extendedKeyUsage = codeSigning